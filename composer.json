{
  "name": "camphi/base-api-client",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Philippe Mendes Campeau",
      "homepage": "https://github.com/camphi/"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "ext-json": "*",
    "guzzlehttp/psr7": "^2.0.0",
    "guzzlehttp/guzzle": "^7.0",
    "php": ">=8.1"
  },
  "autoload": {
    "psr-4": {
      "Camphi\\BaseApiClient\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Camphi\\BaseApiClient\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "pestphp/pest": "2.x-dev",
    "mockery/mockery": "2.0.x-dev"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
